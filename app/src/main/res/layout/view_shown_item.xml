<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="48dp">

    <CheckBox
            android:id="@+id/item_done_check_box"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    <TextView
            android:id="@+id/item_tv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical|start"
            android:textSize="16sp"
            app:layout_constraintEnd_toStartOf="@+id/remove_item_btn"
            app:layout_constraintStart_toEndOf="@id/item_done_check_box"
            app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
            android:id="@+id/remove_item_btn"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginEnd="8dp"
            android:backgroundTint="@color/red"
            android:contentDescription="@string/remove_item"
            android:padding="10dp"
            android:src="@drawable/ic_delete_forever_24"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>